{{#if updateQueryForm}}

  <form>
    <div class="form-group">
      <label for="author">re-enter username :</label>
      {{input class="form-control" value=author}}
    </div>

    <div class="form-group">
      <label for="query">re-enter your question :</label>
      {{input class="form-control" value=query id="query"}}
    </div>

    <div class="form-group">
      <label for="notes">re-enter the details relating to your question :</label>
      {{textarea class="form-control" value=notes id="notes"}}
    </div>

    <hr>

    {{#bs-button class="btn btn-warning" type="primary" icon="glyphicon glyphicon-pencil" action="updateQuery"}}edit query{{/bs-button}}

  </form>

{{else}}

{{#bs-button class="btn btn-warning" type="primary" icon="glyphicon glyphicon-pencil" action="updateQuery"}}edit query{{/bs-button}}
  <!-- <button class="btn btn-xs btn-default"{{action "updateQueryForm"}}> update </button> -->

{{/if}}
